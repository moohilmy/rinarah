<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Order Confirmation</title>
    <style>
      /* Reset styles */
      body, table, td, p {
        margin: 0;
        padding: 0;
        line-height: 1.6;
      }

      body {
        background-color: #fdfae3;
        font-family: Arial, sans-serif;
        color: #562a17;
      }

      .email-container {
        width: 100%;
        padding: 40px 0;
      }

      .email-content {
        width: 600px;
        background-color: #ffffff;
        border: 1px solid #ddd;
        border-radius: 6px;
        margin: 0 auto;
      }

      .header {
        background-color: #562a17;
        padding: 20px;
        text-align: center;
      }

      .logo {
        width: 120px;
      }

      .banner {
        background-color: #D57929;
        padding: 15px;
        text-align: center;
        color: #fff;
      }

      .section {
        padding: 30px;
      }

      .section p {
        margin-bottom: 10px;
        font-size: 14px;
      }

      table.items {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        font-size: 14px;
      }

      table.items th,
      table.items td {
        padding: 10px;
        border-bottom: 1px solid #ddd;
      }

      table.items td:last-child {
        text-align: right;
      }

      .summary td {
        border: none;
      }

      .summary td:first-child {
        text-align: right;
      }

      .footer {
        background-color: #562a17;
        text-align: center;
        color: #fff;
        padding: 15px;
        font-size: 12px;
      }

      .address {
        margin-top: 30px;
        font-size: 14px;
        line-height: 1.5;
      }

      .total {
        font-weight: bold;
        border-top: 2px solid #562a17;
      }

      @media only screen and (max-width: 620px) {
        .email-content {
          width: 95% !important;
        }

        table.items th, table.items td {
          font-size: 13px;
        }

        .section p, .address {
          font-size: 13px;
        }
      }
    </style>
  </head>

  <body>
    <!-- TEMP DEBUG OUTPUT -->

    <div class="email-container">
      <div class="email-content">
        <!-- Header -->
        <div class="header">
          <img
            src="https://res.cloudinary.com/dvz8rxqde/image/upload/v1752141414/LOGO_ICON-04-1-04_svowtg.png"
            alt="Rinarah Logo"
            class="logo"
          />
        </div>

        <!-- Banner -->
        <div class="banner">
          <h2 style="margin: 0;">Thanks for shopping with us</h2>
        </div>

        <!-- Main Section -->
        <div class="section">
          <p>Hi <strong>{{customerName}}</strong>,</p>
          <p>Your order <strong>#{{orderId}}</strong> has been confirmed on <em>{{orderDate}}</em>.</p>

          <!-- Order Table -->
          <table class="items">
            <thead>
              <tr>
                <th align="left">Product</th>
                <th align="center">Qty</th>
                <th align="right">Price</th>
              </tr>
            </thead>
            <tbody>
              {{#each items}}
              <tr>
                <td>{{this.name}}</td>
                <td align="center">{{this.qty}}</td>
                <td>{{this.price}} $</td>
              </tr>
              {{/each}}

              <!-- Summary -->
              <tr class="summary">
                <td colspan="2">Subtotal:</td>
                <td>{{subtotal}} $</td>
              </tr>
              <tr class="summary">
                <td colspan="2">Tax:</td>
                <td>{{tax}} $</td>
              </tr>
              <tr class="summary">
                <td colspan="2">Shipping:</td>
                <td>{{billing.shippingPrice}} $</td>
              </tr>
              <tr class="summary">
                <td colspan="2">Payment:</td>
                <td>{{paymentMethod}}</td>
              </tr>
              <tr class="summary total">
                <td colspan="2">Total:</td>
                <td>{{total}} $</td>
              </tr>
            </tbody>
          </table>

          <!-- Address -->
          <div class="address">
            <h4>Billing Address</h4>
            <p>
              {{customerName}}<br />
              {{billing.address.line1}}<br />
              {{billing.address.zip}}, {{billing.address.city}}, {{billing.address.country}}<br />
              {{billing.phone}}<br />
              {{customerEmail}}
            </p>
          </div>
